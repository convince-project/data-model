// We build up on the specification of JANI https://docs.google.com/document/d/1BDQIzPBtscxJFFlDUEPIo8ivKHgXT8_X6hz5quq7jK0/edit
// which is specified in js-schema.
// In this file we only show the property specification part of of the full JANI specification.
// This version replaces the property specification part of the original JANI specification for the use in CONVINCE tooling.

var Property = schema ({
	name: String
	expr: PropertyExp
});
var PropertyExp = schema (
	{
		AtomicProposition (Identifiers, true, false, Integers, Reals)
	},
	{
		op = [and, or, impl, =, <, >, <=, >=, !=],
		arg_1 = PropertyExp,
		arg_2 = PropertyExp
	},
	{
		op = [until, release],
		?int_a = n in Nat,
		?int_b = n in Nat,
		arg_1 = PropertyExp,
		arg_2 = PropertyExp
	}
	{
		op = [globally, finally, not],
		arg = PropertyExp
	},
	{
		op = in,
		arg = Identifier,
		lower = [Integer, Real],
		upper = [Integer, Real]
	}
);